@page
@model BuildR_V_1.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "/Pages/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="title-container">
    <h2 class="title-page">Login</h2>
</div>

<form class="making-content-form" method="post">
    <h4>Use a local account to log in</h4>

    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="Input.Email"></label>
        <input class="content-input" asp-for="Input.Email" />
        <span asp-validation-for="Input.Email"></span>
    </div>
    <div>
        <label asp-for="Input.Password"></label>
        <input class="content-input" asp-for="Input.Password" />
        <span asp-validation-for="Input.Password"></span>
    </div>
    <div>
        <button id="submit-button" type="submit">Log in</button>
    </div>
</form>


